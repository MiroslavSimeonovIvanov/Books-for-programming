/* Напишете програма, която да приема две целочислени стойности
 * от клавиатурата и после да изведе резултата от първото число,
 * повдигнато на степен второто число. (Например, ако потребителят 
 * въведе 2 и 4, то резултатът трябва да е 2^4 или 16.) 
 */

using System;

class FirstNumPowerSecondNum
{
    static void Main()
    {
        Console.Write("Enter base: ");
        int firstNumber = int.Parse(Console.ReadLine());

        Console.Write("Enter power: ");
        int secondNumber = int.Parse(Console.ReadLine());

        long result = (long)Math.Pow(firstNumber, secondNumber);
        Console.WriteLine("Result: {0}", result);
    }
}
